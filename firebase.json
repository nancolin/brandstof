{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/es5-bundled/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/!(*.js|*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg|*.gif)",
        "destination": "/index.html"
      }
    ]
  }
}
